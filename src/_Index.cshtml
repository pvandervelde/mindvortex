Title: Home
ShowInNavbar: true
Order: 10
---

@{
    foreach(IDocument doc in Documents[Blog.BlogPosts].Take(5))
    {
        <div id="post-spacer">
            <div id="post">
                <div id="post-header">
                    @Html.Partial("_PostHeader.cshtml", Tuple.Create(Model, doc))
                </div>
                <div id="post-content">
                    @Html.Raw(doc.Content)
                </div>
            </div>
        </div>
    }
}
